<div class="form">
  <h1 class="form-title">Editing Book</h1>
  
  <%= form_with model:@book, local:true do |f| %>
   <h5>Title</h5>
   <%= f.text_field :title %>
   
   <h5>Body</h5>
   <%= f.text_area :body %><br>
   
   <%= f.submit "Update Book" %>
   
  <% end %>
  
  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", books_path %>
  
</div>