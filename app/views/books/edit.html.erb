<h1>Editing Book</h1>
  
<%= form_with model:@book, local:true do |f| %>
  <div class="field">
     <h4>Title</h4>
     <%= f.text_field :title %>
  </div>
   
  <div class="area">
     <h4>Body</h4>
     <%= f.text_area :body %><br>
  </div>
   
  <div class="submit">
     <%= f.submit "Update Book" %>
  </div>
<% end %>
  
<%= link_to "Show", book_path(@book.id) %>
<span>|</span>
<%= link_to "Back", books_path %>